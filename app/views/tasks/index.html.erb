<h1>タスク一覧</h1>

<% if @tasks.any? %>
   <table class = 'table table-striped'>
    <thead>
        <tr>
            <th>id</th>
            <th>タスク</th>
            <th>ステータス</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @tasks.each do |task| %>
        <tr>
            <td><%= link_to task.id, task %></td>
            <td><%= task.content %></td>
            <td><%= task.status %></td>
            <td><%= link_to '編集', edit_task_path(task) %></td>
            <td><%= link_to '削除', task, method: :delete %></td>
        </tr>
        <% end %>
    </tbody>
  </table>

<div>
<%= paginate @tasks %>
</div>

<% end %>

<%= link_to '新しいタスクの入力', new_task_path, class: "btn btn-primary" %>